<Page x:Class="ArchiveApp.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArchiveApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1000"
      Title="MainMenuPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Name="DocumentBtn" Content="Документы" Background="#bae3e8" Grid.Row="1" Grid.Column="1" 
                VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="20" Click="DocumentBtn_Click" 
                BorderThickness="1,1,0,1" BorderBrush="Black"/>
        <Button Name="SimpleRepBtn" Content="Простой отчет" Background="#bae3e8" Grid.Row="1" Grid.Column="2" 
                VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="20" Click="SimpleRepBtn_Click" 
                BorderThickness="1,1,1,1" BorderBrush="Black"/>
        <Button Name="UserBtn" Content="Пользователи" Background="#bae3e8" Grid.Row="1" Grid.Column="3" 
                VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="20" Click="UserBtn_Click" 
                BorderThickness="0,1,1,1" BorderBrush="Black"/>
        <Button Name="RegCardBtn" Content="Карточки" Background="#bae3e8" Grid.Row="2" Grid.Column="1" 
                VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="20" Click="RegCardBtn_Click" 
                BorderThickness="1,0,1,1" BorderBrush="Black"/>
        <Button Name="RequestBtn" Content="Запросы" Background="#bae3e8" Grid.Row="2" Grid.Column="2" 
                VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="20" Click="RequestBtn_Click" 
                BorderThickness="0,0,1,1" BorderBrush="Black"/>
        <Button Name="ReportBtn" Content="Отчет" Background="#bae3e8" Grid.Row="2" Grid.Column="3" 
                VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="20" Click="ReportBtn_Click" 
                BorderThickness="0,0,1,1" BorderBrush="Black"/>
    </Grid>
</Page>
