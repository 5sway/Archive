<Window x:Class="ArchiveApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArchiveApp"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="400" MinWidth="800" MaxHeight="600" MaxWidth="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Grid Background="#bae3e8" Grid.Row="0" Grid.ColumnSpan="2"></Grid>
        <Grid Name="MenuGrid" Background="#bae3e8" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="1" Panel.ZIndex="-1"></Grid>
        <TextBlock Name="Title" FontSize="16" Text='АИС "ИС Архив"' HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,0,0,0" Grid.Column="1"></TextBlock>
        <Button Name="MainBtn" Background="#bae3e8" Grid.Row="1" Height="50" VerticalAlignment="Top" HorizontalAlignment="Stretch" BorderThickness="0" Content="Главное"
                HorizontalContentAlignment="Left" Padding="20,0,0,0" FontSize="14"/>
        <Button Name="DocBtn" Background="#bae3e8" Grid.Row="1" Height="50" VerticalAlignment="Top" Margin="0,50,0,0" HorizontalAlignment="Stretch" BorderThickness="0"
                Content="Документы" HorizontalContentAlignment="Left" Padding="20,0,0,0" FontSize="14"/>
        <Button Name="ReqBtn" Background="#bae3e8" Grid.Row="1" Height="50" VerticalAlignment="Top" Margin="0,100,0,0" HorizontalAlignment="Stretch"  BorderThickness="0"
                Content="Запросы" HorizontalContentAlignment="Left" Padding="20,0,0,0" FontSize="14"/>
        <Button Name="RepBtn" Background="#bae3e8" Grid.Row="1" Height="50" VerticalAlignment="Top" Margin="0,150,0,0" HorizontalAlignment="Stretch" BorderThickness="0"
                Content="Отчет" HorizontalContentAlignment="Left" Padding="20,0,0,0" FontSize="14"/>
        <Frame NavigationUIVisibility="Hidden" Grid.Row="1" Grid.Column="1" Name="MainFrame"/>
        <Button Name="SearchBtn" Grid.Column="1" Width="25" Height="25" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,100,0" Panel.ZIndex="1"
                Background="LightGray" Click="SearchBtn_Click">
            <Image Source="/Resources/SearchIcon.png"></Image>
        </Button>
        <Button Name="NotBtn" Background="Transparent" BorderThickness="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Height="25"
                Width="25" Margin="0,0,60,0">
            <Image Source="/Resources/NotIcon.png"></Image>
        </Button>
        <Button Name="RefreshBtn" Background="Transparent" BorderThickness="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Height="25"
                Width="25" Margin="0,0,20,0" Click="RefreshButton_Click">
            <Image Source="/Resources/UpdateIcon.png" ></Image>
        </Button>
        <Image Source="/Resources/ArchiveIcon.png" VerticalAlignment="Center" HorizontalAlignment="Left" Height="30"
               Width="30" Margin="15,0,0,0"></Image>
        <Button Name="BurgerBtn" Background="Transparent" BorderThickness="0" VerticalAlignment="Center" HorizontalAlignment="Right"
                Height="30" Width="30" Margin="0,0,30,0">
            <Image Source="/Resources/BurgerIcon.png"></Image>
        </Button>
        <TextBox Name="SearchBox" Grid.Column="1" Height="25" Width="250" VerticalContentAlignment="Center" VerticalAlignment="Center"
                 HorizontalAlignment="Right" HorizontalContentAlignment="Left" Margin="0,0,100,0" Padding="5,0,0,0" GotFocus="SearchBox_GotFocus"
                 LostFocus="SearchBox_LostFocus"></TextBox>
        <TextBlock Name="SearchText" Text="Поиск" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" TextAlignment="Left" FontSize="14"
                   Margin="0,0,303,0"></TextBlock>
    </Grid>
</Window>
