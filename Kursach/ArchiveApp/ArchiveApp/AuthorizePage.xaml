<Page x:Class="ArchiveApp.AuthorizePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArchiveApp"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1000"
      Title="AuthorizePage">

    <Grid>
        <TextBox x:Name="LoginBox" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="50" GotFocus="LoginBox_GotFocus" LostFocus="LoginBox_LostFocus" FontSize="20" Margin="0,-120,0,0" Padding="10,0,0,0"></TextBox>
        <TextBlock x:Name="LoginText" Text="Логин" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Left" FontSize="20" Margin="0,-120,220,0"></TextBlock>
        <TextBlock x:Name="PasswordText" Text="Пароль" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Left" FontSize="20" Margin="0,0,210,0" Panel.ZIndex="1"></TextBlock>
        <PasswordBox x:Name="PasswordBox" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="50" GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus" FontSize="20" Padding="10,0,0,0"></PasswordBox>
        <Button x:Name="LoginBtn" Content="Войти" VerticalContentAlignment="Center" Background="#bae3e8" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="40" Margin="0,110,0,0" Click="Button_Click" FontSize="18"></Button>
    </Grid>
</Page>
