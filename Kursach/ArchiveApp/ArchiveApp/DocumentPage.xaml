<Page x:Class="ArchiveApp.DocumentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArchiveApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DocumentPage" IsVisibleChanged="Page_IsVisibleChanged">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="DataGridTable"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  CanUserResizeColumns="True"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True"
                  GridLinesVisibility="All"
                  BorderThickness="1"
                  Margin="5,5,5,0"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Binding="{Binding Receipt_Date, StringFormat={}{0:dd.MM.yyyy}}" Width="*"/>
                <DataGridTextColumn Header="Архивный шифр" Binding="{Binding Number}" Width="*"/>
                <DataGridTextColumn Header="Заголовок" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Annotation}" Width="*"/>
                <DataGridTextColumn Header="Источник" Binding="{Binding Source}" Width="*"/>
                <DataGridTextColumn Header="Количество копий" Binding="{Binding Copies_Count}" Width="*"/>
                <DataGridTemplateColumn Header="Тип хранилища" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Storage_Type}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding Path=DataContext.StorageTypes, RelativeSource={RelativeSource AncestorType=Page}}"
                      SelectedItem="{Binding Storage_Type, UpdateSourceTrigger=PropertyChanged}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button Name="AddBtn" Content="Добавить" Background="#bae3e8" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0" Width="120" Height="40" Grid.Row="1" Click="AddBtn_Click"/>
        <Button Name="DelBtn" Content="Удалить" Background="#bae3e8" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="130,0,0,0" Width="120" Height="40" Grid.Row="1" Click="DelBtn_Click"/>
        <Button Name="EditBtn" Content="Изменить" Background="#bae3e8" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0" Width="120" Height="40" Grid.Row="1" Click="EditBtn_Click"/>
    </Grid>
</Page>